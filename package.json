{
  "name": "@jonz94/discord-bot-ufo",
  "version": "1.0.0",
  "description": "A Discord BOT named 機器幽浮 (robot UFO)",
  "license": "0BSD",
  "author": {
    "name": "jonz94",
    "email": "jody16888@gmail.com"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm run clean && tsup src/main.mts --minify",
    "build-copy": "pnpm run build && cpy .env dist/",
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=DEV tsx watch src/main.mts",
    "fmt": "prettier --write .",
    "start": "node dist/main.cjs",
    "start:dev": "cross-env NODE_ENV=DEV node dist/main.cjs"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.12",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15"
  }
}
